<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.Material3.Dark.ActionBar"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            app:title="Wire Auto Messenger"
            app:titleTextColor="@color/on_primary"
            app:navigationIconTint="@color/on_primary" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Welcome Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/primary_container">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Welcome!"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_primary_container"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Send messages to all your Wire contacts automatically. Set it up once and let it work for you."
                        android:textSize="14sp"
                        android:textColor="@color/on_primary_container"
                        android:alpha="0.87" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Accessibility Service Status Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Service Status"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/on_surface" />

                        <TextView
                            android:id="@+id/tvAccessibilityStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Checking..."
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp"
                            android:background="@drawable/status_badge"
                            android:textColor="@color/on_surface" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enable Accessibility Service to allow the app to automate message sending in Wire."
                        android:textSize="13sp"
                        android:textColor="@color/on_surface_variant"
                        android:layout_marginBottom="16dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnEnableAccessibility"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/enable_accessibility"
                        android:textAllCaps="false"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:icon="@android:drawable/ic_menu_preferences"
                        app:iconGravity="textStart" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Message Input Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Your Message"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_surface"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/message_hint"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:startIconDrawable="@android:drawable/ic_menu_edit"
                        android:layout_marginBottom="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etMessage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minLines="5"
                            android:maxLines="10"
                            android:scrollbars="vertical"
                            android:gravity="top|start"
                            android:inputType="textMultiLine|textCapSentences"
                            android:textSize="15sp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="This message will be sent to all your Wire contacts."
                        android:textSize="12sp"
                        android:textColor="@color/on_surface_variant"
                        android:drawablePadding="8dp"
                        android:drawableStart="@android:drawable/ic_dialog_info"
                        android:drawableTint="@color/on_surface_variant"
                        android:paddingStart="4dp"
                        android:paddingTop="4dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Schedule Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Automatic Scheduling"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_surface"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/schedule_every_3_days"
                                android:textSize="16sp"
                                android:textColor="@color/on_surface" />

                            <TextView
                                android:id="@+id/tvNextSend"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="13sp"
                                android:textColor="@color/on_surface_variant"
                                android:visibility="gone"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchSchedule"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:thumbTint="@color/primary"
                            app:trackTint="@color/surface_variant" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Automatically send your message every 3 days without manual intervention."
                        android:textSize="12sp"
                        android:textColor="@color/on_surface_variant"
                        android:drawablePadding="8dp"
                        android:drawableStart="@android:drawable/ic_menu_recent_history"
                        android:paddingStart="4dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Action Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSendNow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/send_now"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:paddingVertical="16dp"
                style="@style/Widget.Material3.Button"
                app:icon="@android:drawable/ic_menu_send"
                app:iconGravity="textStart"
                android:layout_marginBottom="12dp" />

            <!-- Status Text -->
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/on_surface_variant"
                android:paddingVertical="8dp"
                android:visibility="gone" />

            <!-- Progress Indicator -->
            <LinearLayout
                android:id="@+id/llProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginTop="8dp">

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/progressBar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:indeterminate="true"
                    app:indicatorColor="@color/primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sending messages..."
                    android:textSize="14sp"
                    android:textColor="@color/on_surface_variant"
                    android:layout_marginTop="12dp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
